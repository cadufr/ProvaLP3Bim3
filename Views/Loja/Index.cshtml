@model List<ProvaLP3.ViewModels.LojaViewModel>

@{
    ViewData["Title"] = "Lista de Loja";
}

<h1>Lojas</h1>
@if(Model.Count == 0)
{
    <p>Não há nenhuma loja cadastrada.</p>
}
else
{
    @foreach(var loja in Model)
    {
        <h3>@loja.Nome</h3>
        <p>@loja.Descricao</p>
        <hr>
    }
}